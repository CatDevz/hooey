{
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "removeComments": true,
    "noImplicitAny": true
  }
}
